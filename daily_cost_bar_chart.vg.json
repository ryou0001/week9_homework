{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"width": 800,
"height": 600,
"title": { "text": "Super Tuesday Cyclist Numbers" },
"layer": [
    {
    "data": {
        "url": "MB_2016_VIC.json",
        "format": {"type": "topojson", "feature": "MB_2016_VIC"}
    },
    "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
      {
    "data": {
        "url": "municipal-boundary.json",
        "format": {"type": "topojson", "feature": "municipal-boundary"}
    },
    "mark": {
        "type": "geoshape", 
        "opacity": "0.2", 
        "stroke": "blue", 
        "tooltip": {"content": "data"}}
    },
    {
    "data": {
    "url": "annual-bike-counts-super-tuesday.csv"
    },
    "mark": {"type": "circle", "tooltip": {"content": "data"}},
    "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
            "field": "total",
            "type": "quantitative",
            "title": "Total cyclists",
            "scale": {"domain": [0, 500]}
        }
    }
    }
]
}