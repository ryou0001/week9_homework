{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
"width": 800,
"height": 600,
"title": { "text": "Super Tuesday Cyclist Numbers in the City of Melbourne 2017" },
"layer": [
    {
    "data": {
        "url": "MB_2016_VIC.json",
        "format": {"type": "topojson", "feature": "MB_2016_VIC"}
    },
    "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
    },
      {
    "data": {
        "url": "municipal-boundary.json",
        "format": {"type": "topojson", "feature": "municipal-boundary"}
    },
    "mark": {
        "type": "geoshape", 
        "opacity": "0.2", 
        "stroke": "blue"}
    },
    {
    "data": {
    "url": "annual-bike-counts-super-tuesday.csv"
    },
    "mark": {"type": "circle"},
    "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
            "field": "total",
            "type": "quantitative",
            "title": "Total cyclists",
            "scale": {"domain": [0, 2000]}
        },
        "tooltip": [
            {"field": "description", "type": "nominal", "title": "Location"}, 
            {"field": "total", "type": "quantitative", "title": "Total count"}
        ]
    }
    }
]
}